    <PackageReference Include="Be.Stateless.Dsl.Configuration" Version="2.0.21350.41992" />
    <PackageReference Include="Be.Stateless.Extensions" Version="2.0.21343.20798" />
    <PackageReference Include="Be.Stateless.Reflection" Version="2.0.21281.37160" />
    <PackageReference Include="Be.Stateless.Runtime" Version="2.0.21285.37924" />
    <PackageReference Include="Be.Stateless.Security" Version="2.0.21281.38867" />
    <PackageReference Include="Be.Stateless.Stream" Version="2.0.21360.33353" />
    <PackageReference Include="Be.Stateless.Xml" Version="2.0.21360.33935" />
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="6.0.0">
      <PrivateAssets>all</PrivateAssets>
